{
  "name": "system-dashboard",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "module": "src/system-dashboard-cli.mjs",
  "description": "web gateway to systemd",
  "keywords": [],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "bin": {
    "system-dashboard": "bin/system-dashboard",
    "system-dashboard-systemd": "bin/system-dashboard-systemd"
  },
  "scripts": {
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava && c8 report -r lcov -o build/coverage --temp-directory build/tmp",
    "docs": "documentation readme src/system-dashboard-cli.mjs --section=API",
    "lint": "documentation lint src/system-dashboard-cli.mjs",
    "posttest": "npm run prepare && markdown-doctest",
    "prepare": "rollup -c",
    "test": "ava"
  },
  "dependencies": {
    "@kronos-integration/service": "^7.1.8",
    "@kronos-integration/service-admin": "^3.0.0",
    "@kronos-integration/service-authenticator": "^1.0.3",
    "@kronos-integration/service-health-check": "^4.0.2",
    "@kronos-integration/service-koa": "^7.1.2",
    "@kronos-integration/service-ldap": "^2.0.1",
    "commander": "^4.0.1",
    "dbus-next": "^0.7.1",
    "execa": "^3.4.0"
  },
  "devDependencies": {
    "@rollup/plugin-json": "^4.0.0",
    "@semantic-release/exec": "^3.3.8",
    "ava": "^2.4.0",
    "builtin-modules": "^3.1.0",
    "c8": "^6.0.1",
    "documentation": "^12.1.4",
    "esm": "^3.2.25",
    "got": "^9.6.0",
    "markdown-doctest": "^1.0.0",
    "npm-pkgbuild": "^6.10.10",
    "rollup": "^1.27.5",
    "rollup-plugin-cleanup": "^3.1.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-executable": "^1.5.1",
    "rollup-plugin-native": "^0.0.8",
    "rollup-plugin-node-resolve": "^5.2.0",
    "semantic-release": "^15.13.31"
  },
  "optionalDependencies": {
    "@kronos-integration/service-systemd": "^2.1.4"
  },
  "engines": {
    "node": ">=12.13.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/system-dashboard.git"
  },
  "files": [
    "bin"
  ],
  "bugs": {
    "url": "https://github.com/arlac77/system-dashboard/issues"
  },
  "homepage": "https://github.com/arlac77/system-dashboard#readme",
  "config": {
    "base": "/services/system-dashboard/api",
    "socket": "/run/${name}/socket"
  },
  "systemd": {
    "units": {
      "${name}": "systemd/${name}*"
    }
  },
  "pacman": {
    "arch": [
      "aarch64",
      "armv7h",
      "x86_64"
    ],
    "groups": "webhook",
    "hooks": "pacman/hooks.sh",
    "backup": "etc/${name}/config.json",
    "depends": {
      "systemd": ">=243.78"
    },
    "installdir": "/services/${name}",
    "content": {
      "/etc/${name}/config.json": "config/config.json",
      "/etc/nginx/config.d/${name}.conf": "pacman/nginx.conf"
    }
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --pkgver ${nextRelease.version} --npm-dist --npm-modules pkgbuild pacman makepkg"
        }
      ]
    ]
  },
  "ava": {
    "require": [
      "esm"
    ],
    "extensions": [
      "mjs"
    ],
    "babel": false,
    "compileEnhancements": false,
    "files": [
      "tests/*-test.mjs"
    ]
  },
  "template": {
    "repository": {
      "url": "https://github.com/arlac77/npm-package-template.git"
    }
  }
}
