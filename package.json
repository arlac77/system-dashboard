{
  "name": "system-dashboard",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "main": "./src/system-dashboard-cli.mjs",
  "description": "web gateway to systemd",
  "keywords": [
    "kronos-integration",
    "systemd"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "bin": {
    "system-dashboard": "./src/system-dashboard-cli.mjs"
  },
  "scripts": {
    "test": "npm run test:ava",
    "test:ava": "ava --timeout 2m tests/*.mjs",
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava --timeout 2m && c8 report -r lcov -o build/coverage --temp-directory build/tmp"
  },
  "dependencies": {
    "@kronos-integration/interceptor-decode-json": "^2.1.62",
    "@kronos-integration/service": "^10.4.20",
    "@kronos-integration/service-admin": "^3.4.55",
    "@kronos-integration/service-authenticator": "^1.6.20",
    "@kronos-integration/service-health": "^5.0.147",
    "@kronos-integration/service-http": "^10.6.106",
    "@kronos-integration/service-ldap": "^4.0.80",
    "@kronos-integration/service-swarm": "^1.9.86",
    "execa": "^6.1.0"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "ava": "^4.1.0",
    "c8": "^7.3.0",
    "got": "^12.0.3",
    "npm-pkgbuild": "^8.2.3",
    "semantic-release": "^19.0.2"
  },
  "optionalDependencies": {
    "@kronos-integration/service-systemd": "^2.5.3"
  },
  "engines": {
    "node": ">=16.13.2"
  },
  "os": [
    "linux"
  ],
  "cpu": [
    "arm",
    "arm64",
    "x64"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/system-dashboard.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/system-dashboard/issues"
  },
  "homepage": "https://github.com/arlac77/system-dashboard#readme",
  "config": {
    "base": "/services/${name}/api",
    "socket": "/run/${name}/http/socket"
  },
  "pkg": {
    "content": {
      "/etc/${name}/config.json": "config/config.json",
      "/usr/lib/tmpfiles.d/${name}.conf": "pkg/tmpfiles.conf",
      "/usr/lib/sysusers.d/${name}.conf": "pkg/sysusers.conf",
      "/etc/polkit-1/rules.d/${name}.rules": "pkg/polkit.rules",
      "/etc/nginx/sites/common/${name}.conf": "pkg/nginx.conf",
      "${installdir}/": [
        {
          "type": "npm-pack"
        },
        {
          "type": "node-modules"
        }
      ],
      "/usr/lib/systemd/system/": {
        "base": "systemd"
      }
    },
    "output": {
      "arch": {}
    },
    "hooks": "pkg/hooks.sh",
    "backup": "etc/${name}/config.json",
    "groups": "webhook",
    "depends": {
      "systemd": ">=250.4",
      "nginx-mainline": ">=1.21.4"
    },
    "installdir": "/services/${name}"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild"
        }
      ],
      "@semantic-release/npm"
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-kronos-app"
    ]
  }
}
