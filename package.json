{
  "name": "system-dashboard",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "main": "./src/system-dashboard-cli.mjs",
  "description": "web gateway to systemd",
  "keywords": [
    "kronos-integration",
    "systemd"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "bin": {
    "system-dashboard": "./src/system-dashboard-cli.mjs"
  },
  "scripts": {
    "test": "npm run test:ava",
    "test:ava": "ava --timeout 2m tests/*-ava.mjs tests/*-ava-node.mjs",
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava --timeout 2m && c8 report -r lcov -o build/coverage --temp-directory build/tmp"
  },
  "dependencies": {
    "@kronos-integration/interceptor-decode-json": "^2.1.73",
    "@kronos-integration/service": "^10.4.37",
    "@kronos-integration/service-admin": "^3.4.65",
    "@kronos-integration/service-authenticator": "^1.6.46",
    "@kronos-integration/service-health": "^5.0.174",
    "@kronos-integration/service-http": "^10.6.140",
    "@kronos-integration/service-ldap": "^4.0.107",
    "execa": "^6.1.0"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "ava": "^5.1.0",
    "c8": "^7.3.0",
    "got": "^12.5.3",
    "npm-pkgbuild": "^10.15.23",
    "semantic-release": "^19.0.5"
  },
  "optionalDependencies": {
    "@kronos-integration/service-systemd": "^2.5.6",
    "mf-hosting": "^1.8.0"
  },
  "engines": {
    "node": ">=18.12.1"
  },
  "os": [
    "linux"
  ],
  "cpu": [
    "arm",
    "arm64",
    "x64"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/system-dashboard.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/system-dashboard/issues"
  },
  "homepage": "https://github.com/arlac77/system-dashboard#readme",
  "pkgbuild": {
    "content": {
      "${install.dir}": [
        {
          "type": "npm-pack"
        },
        {
          "type": "node-modules"
        }
      ],
      "${systemd.unit.dir}${name}.service": "pkg/${name}.service",
      "${systemd.unit.dir}${name}.socket": "pkg/${name}.socket",
      "${config.dir}config.json": "config/config.json",
      "${sysusers.config.dir}${name}.conf": "pkg/sysusers.conf",
      "${polkit.rules.dir}${name}.rules": "pkg/polkit.rules",
      "${nginx.sites.dir}${name}.conf": "pkg/nginx.conf",
      "${tmpfiles.config.dir}${name}.conf": "pkg/tmpfiles.conf"
    },
    "hooks": "pkg/hooks.sh",
    "backup": "${config.dir}config.json",
    "http.path": "/services/${name}/api"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --available --continue --publish dist"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "dist/*.deb",
              "label": "Debian Package"
            },
            {
              "path": "dist/*.pkg.*",
              "label": "Arch Linux Package"
            }
          ]
        }
      ],
      "@semantic-release/npm"
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-kronos-app"
    ]
  }
}
