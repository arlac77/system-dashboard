{
  "name": "system-dashboard",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public",
    "provenance": false
  },
  "main": "./src/system-dashboard-cli.mjs",
  "description": "web gateway to systemd",
  "keywords": [
    "kronos-integration",
    "systemd"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "bin": {
    "system-dashboard": "src/system-dashboard-cli.mjs"
  },
  "scripts": {
    "test": "node --run test:ava",
    "test:ava": "ava --timeout 4m tests/*-ava.mjs tests/*-ava-node.mjs",
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava --timeout 2m && c8 report -r lcov -o build/coverage --temp-directory build/tmp"
  },
  "dependencies": {
    "@kronos-integration/interceptor-decode-json": "^3.0.5",
    "@kronos-integration/service": "^13.0.0",
    "@kronos-integration/service-admin": "^3.4.79",
    "@kronos-integration/service-authenticator": "^2.0.1",
    "@kronos-integration/service-health": "^6.0.0",
    "@kronos-integration/service-http": "^12.0.3",
    "@kronos-integration/service-ldap": "^4.0.138",
    "@kronos-integration/service-swarm": "^2.0.3",
    "execa": "^9.6.0"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/github": "^11.0.3",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "ava": "^6.4.0",
    "c8": "^10.0.0",
    "got": "^14.4.7",
    "mf-hosting": "^2.8.14",
    "npm-pkgbuild": "^18.2.11",
    "semantic-release": "^24.2.5"
  },
  "optionalDependencies": {
    "@kronos-integration/service-systemd": "^3.0.1"
  },
  "engines": {
    "node": ">=24.4.1"
  },
  "os": [
    "linux",
    "darwin"
  ],
  "cpu": [
    "arm",
    "arm64",
    "x64"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arlac77/system-dashboard.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/system-dashboard/issues"
  },
  "homepage": "https://github.com/arlac77/system-dashboard#readme",
  "pkgbuild": {
    "content": {
      "${install.dir}": {
        "type": "npm-pack"
      },
      "${install.dir}/node_modules": {
        "type": "node-modules"
      },
      "${systemd.unit.dir}${name}.service": "pkg/${name}.service",
      "${config.dir}config.json": "config/config.json",
      "${polkit.rules.dir}${name}.rules": "pkg/polkit.rules"
    },
    "http.path": "/services/${name}/api",
    "kronos": true
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --publish dist"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "dist/*.deb",
              "label": "any Debian Package"
            },
            {
              "path": "dist/*any.pkg.*",
              "label": "any Arch Linux Package"
            },
            {
              "path": "dist/*x86_64.pkg.*",
              "label": "x86_64 Arch Linux Package"
            },
            {
              "path": "dist/*aarch64.pkg.*",
              "label": "arm64 Arch Linux Package"
            },
            {
              "path": "dist/*noarch.rpm",
              "label": "noarch RPM"
            },
            {
              "path": "dist/*x86_64.rpm",
              "label": "x86_64 RPM"
            },
            {
              "path": "dist/*aarch64.rpm",
              "label": "arm64 RPM"
            }
          ]
        }
      ],
      "@semantic-release/npm"
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-kronos-app"
    ]
  }
}
