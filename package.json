{
  "name": "system-dashboard",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "main": "./src/system-dashboard-cli.mjs",
  "description": "web gateway to systemd",
  "keywords": [
    "kronos-integration",
    "systemd"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "bin": {
    "system-dashboard": "./src/system-dashboard-cli.mjs"
  },
  "scripts": {
    "test": "ava --timeout 2m",
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava --timeout 2m && c8 report -r lcov -o build/coverage --temp-directory build/tmp"
  },
  "dependencies": {
    "@kronos-integration/interceptor-decode-json": "^2.1.11",
    "@kronos-integration/service": "^8.5.15",
    "@kronos-integration/service-admin": "^3.1.9",
    "@kronos-integration/service-authenticator": "^1.1.1",
    "@kronos-integration/service-health-check": "^5.0.36",
    "@kronos-integration/service-http": "^10.1.21",
    "@kronos-integration/service-ldap": "^2.1.38",
    "@kronos-integration/service-swarm": "^1.6.18",
    "dbus-next": "^0.8.2",
    "execa": "^4.0.3"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/exec": "^5.0.0",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "ava": "^3.10.1",
    "c8": "^7.2.0",
    "documentation": "^13.0.1",
    "got": "^11.3.0",
    "npm-pkgbuild": "^6.12.1",
    "semantic-release": "^17.1.1"
  },
  "optionalDependencies": {
    "@kronos-integration/service-systemd": "^2.3.6"
  },
  "engines": {
    "node": ">=14.5.0"
  },
  "os": [
    "linux",
    "darwin"
  ],
  "cpu": [
    "arm",
    "arm64",
    "x64"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/system-dashboard.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/system-dashboard/issues"
  },
  "homepage": "https://github.com/arlac77/system-dashboard#readme",
  "config": {
    "base": "/services/${name}/api",
    "socket": "/run/${name}/http/socket"
  },
  "systemd": {
    "units": {
      "${name}": "systemd/${name}*"
    }
  },
  "pacman": {
    "arch": [
      "aarch64",
      "armv7h",
      "x86_64"
    ],
    "backup": "etc/${name}/config.json",
    "content": {
      "/etc/${name}/config.json": "config/config.json",
      "/etc/nginx/config.d/${name}.conf": "pacman/nginx.conf",
      "/usr/lib/tmpfiles.d/${name}.conf": "pacman/tmpfiles.conf",
      "/usr/lib/sysusers.d/${name}.conf": "pacman/sysusers.conf"
    },
    "depends": {
      "systemd": ">=245.6",
      "nginx-mainline": ">=1.19.0"
    },
    "groups": "webhook",
    "hooks": "pacman/hooks.sh",
    "installdir": "/services/${name}",
    "group": "services",
    "content-provider": {
      "systemd": {
        "units": {
          "${name}": "systemd/${name}*"
        }
      }
    }
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --pkgver ${nextRelease.version} --npm-dist --npm-modules pkgbuild pacman makepkg"
        }
      ]
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-kronos-app",
      "arlac77/template-github"
    ]
  }
}
